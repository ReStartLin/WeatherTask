<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/id_ll_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/weather"
    tools:context="restart.com.weathertask.activity.WeatherActivity">
    <TextView
        android:id="@+id/id_tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:text="城市"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/id_tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="各类人群可自由活动"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"

        />
    <TextView
        android:id="@+id/id_tv_wendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="30.0℃"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"

        />
    <ListView
        android:id="@+id/id_lv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        >


    </ListView>

</LinearLayout>
